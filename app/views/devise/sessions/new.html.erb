<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<h2>Log in</h2>
  <div class="field a">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field b">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field c">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
  
  <div class="simba">
   <img src="<%= image_path "simba.png" %>" height=50 width=50>
 </div>
  
<% end %>

<%= render "devise/shared/links" %>
